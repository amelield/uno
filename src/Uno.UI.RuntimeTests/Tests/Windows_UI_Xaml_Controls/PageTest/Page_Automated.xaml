<Page
    x:Class="Uno.UI.RuntimeTests.Tests.Windows_UI_Xaml_Controls.Page_Automated"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Background="Red" Spacing="10">
            <Border BorderBrush="Black" BorderThickness="1">
                <Page x:Name="_empty" x:FieldModifier="Public" Width="50" Height="50" />
            </Border>
            <Border BorderBrush="Black" BorderThickness="1">
                <Page x:Name="_transparent" x:FieldModifier="Public" Width="50" Height="50" Background="Transparent" />
            </Border>
            <Border BorderBrush="Black" BorderThickness="1">
                <Page x:Name="_colored" x:FieldModifier="Public" Width="50" Height="50" Background="Blue" />
            </Border>
        </StackPanel>
    </Grid>
</Page>
